<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/activity_main">

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view1"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view2"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view3"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pano_view1" />

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pano_view2" />

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view5"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pano_view3" />

    <com.google.vr.sdk.widgets.pano.VrPanoramaView
        android:id="@+id/pano_view6"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pano_view4" />

</androidx.constraintlayout.widget.ConstraintLayout>